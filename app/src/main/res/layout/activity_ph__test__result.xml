<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="ramakrishna.watertest_image.PH_Test_Result"
    android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/ph_test_result"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_1"
                    android:text="0.0"
                    android:layout_margin="1dp"                    android:textColor="#000000"
                    android:gravity="center"/>
                <Button
                    android:layout_margin="1dp"
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_2"
                    android:text="1.0"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_3"
                    android:text="2.0"
                    android:textColor="#000000"
                    android:layout_margin="1dp"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_4"
                    android:text="3.0"
                    android:layout_margin="1dp"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_5"
                    android:text="4.0"
                    android:layout_margin="1dp"
                    android:textColor="#000000"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="@color/ph_6"
                    android:text="5.0"
                    android:layout_margin="1dp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_7"
                        android:text="5.0"
                        android:layout_margin="1dp"
                        android:textColor="#000000"
                        android:gravity="center"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center">


                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_8"
                        android:text="6.0"
                        android:layout_margin="1dp"                    android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_9"
                        android:text="7.0"
                        android:layout_margin="1dp"
                        android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_10"
                        android:text="8.0"
                        android:layout_margin="1dp"
                        android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_11"
                        android:text="9.0"
                        android:layout_margin="1dp"
                        android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_12"
                        android:text="10.0"
                        android:layout_margin="1dp"
                        android:textColor="#FFFF00"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_13"
                        android:text="12"
                        android:layout_margin="1dp"

                        android:textColor="#000000"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/btn_14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="@color/ph_14"
                        android:text="14"
                        android:layout_margin="1dp"
                        android:textColor="#000000"
                        android:gravity="center"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:visibility="invisible"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="OR\nPICK FROM"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="CAMERA"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/btn_capture"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"

                android:text="GALLERY"
                android:id="@+id/btn_gallery"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:layout_marginTop="5dp"
            android:src="@color/color_grey"
            android:id="@+id/img_output"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_result_color1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_result_color2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:id="@+id/tv_result_color3"/>
        </LinearLayout>






    </LinearLayout>


</LinearLayout>
