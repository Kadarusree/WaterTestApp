<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="ramakrishna.watertest_image.PH_Options"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="What is FLUORIDE?"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/ph_7"
            android:textStyle="bold"
            android:onClick="what_is_fluoride"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Start Fluoride Test"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/ph_7"
            android:textStyle="bold"
            android:onClick="start_fluoride_test"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
