<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout android:layout_weight="0.15"
        android:layout_width="0dp"
       
        android:layout_height="match_parent">
        
        <ImageView android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_weight="1"
             android:id="@+id/lv_adptr_imgview"
            android:src="@drawable/gluco_step_five"/>
        
        
        
    </LinearLayout>
    <LinearLayout android:layout_weight="0.85"
        android:layout_width="0dp"
       
       
        android:layout_height="match_parent">
        
        
       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="top"
         android:layout_marginTop="5dp"
           android:textSize="15dp"
           android:textStyle="bold"
           android:id="@+id/lv_adptr_txtview"
           android:gravity="center|left"
           android:text="@string/ph_test_step1"
           android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>
